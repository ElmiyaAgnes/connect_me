<!DOCTYPE html>
<html>
  <head>
    <link rel="icon" href="/assets/icon.png">
    <title>ConnectMe</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!--Navigation Bar-->
    <nav class="navbar navbar-light bg-info d-flex">
      <div class="container">
        <div class="logo">
          <a class="navbar-brand" href="<%= root_path %>">
            <%= fa_stacked_icon "superpowers inverse", base: "circle"%>
            Connect Me
          </a>
        </div>
        <div class="m-auto">
          <form class="form-inline search-form">
            <input class="form-control mr-sm-2" type="search" placeholder="@search" aria-label="Search">
          </form>
        </div>
        <div class="user-section">
          <% if user_signed_in? %>
            <%= current_user.email%>
            <%= link_to current_user do %>
              <%= fa_icon "user 2x" %>
            <% end %>
            <a href="<%= destroy_user_session_path%>" data-method="delete">
              <i class="fa fa-power-off"></i>
            </a>
          <% else %>
            <a href="<%= new_user_session_path%>">
              <i class="fa fa-sign-in"></i>
            </a>
          <% end %>
        </div>
      </div>
    </nav>

    <!--Main content-->
    <main class="container bg-light" style="min-height: 800px;">
      <%= yield %>
    </main>

    <!--Footer-->
    <footer class="footer bg-info">
      <nav class="container navbar d-flex">
        <ul>
          <li>ABOUT US
          </li>
          <li>SUPPORT</li>
          <li>PRESS</li>
          <li>API</li>
          <li>JOBS</li>
          <li>PRIVACY</li>
          <li>TERMS</li>
          <li>DIRECTORY</li>
          <li>PROFILES</li>
          <li>HASHTAGS</li>
          <li>LANGUAGE</li>
        </ul>
        <p> Â© 2020 CONNECT ME </p>
      </nav>
    </footer>
  </body>
</html>
