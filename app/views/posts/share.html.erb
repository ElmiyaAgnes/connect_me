
<%= form_with model: @post, url: post_share_to_users_path, local: true do |form| %>

  <p>
    <%= form.label :select_user%><br>
    <%= form.select :user_id, @users, {:include_blank => true}, {:multiple => true} %>
  </p>
  
  <p>
    <%= form.submit %>
  </p>
<% end %>
<%= link_to 'Back', posts_path %>
